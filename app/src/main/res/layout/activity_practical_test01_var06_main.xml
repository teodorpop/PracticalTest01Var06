<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01Var06MainActivity">

    <EditText
        android:id="@+id/startext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="160dp"
        android:hint="*"
        app:layout_constraintBottom_toBottomOf="@+id/text0"
        app:layout_constraintEnd_toStartOf="@+id/hold1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text0" />

    <EditText
        android:id="@+id/text0"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="81dp"
        android:hint="0"
        app:layout_constraintBottom_toTopOf="@+id/play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginEnd="13dp"
        android:hint="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/text0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hold0" />

    <CheckBox
        android:id="@+id/holdstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="74dp"
        android:text="hold"
        app:layout_constraintEnd_toStartOf="@+id/hold0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startext" />

    <CheckBox
        android:id="@+id/hold0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="63dp"
        android:text="hold"
        app:layout_constraintEnd_toStartOf="@+id/text1"
        app:layout_constraintStart_toEndOf="@+id/holdstar"
        app:layout_constraintTop_toTopOf="@+id/text0" />

    <CheckBox
        android:id="@+id/hold1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="62dp"
        android:text="hold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startext"
        app:layout_constraintTop_toTopOf="@+id/text1" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="503dp"
        android:text="PLAY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hold0"
        app:layout_constraintTop_toBottomOf="@+id/text0" />

</androidx.constraintlayout.widget.ConstraintLayout>

